/* pages/addBook/addBook.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  padding: 1rem;
  font-size: 0.9rem;
  line-height: 1.5rem;
  /* border-shadow: 1px 1px #0099CC; */
}

.row {
  display: flex;
  align-items: center;
  margin-bottom: 0.8rem;
}

.row text {
  flex-grow: 1;
  text-align: right;
}

.row input {
  font-size: 0.7rem;
  color: #ccc;
  flex-grow: 3;
  border-bottom: 1px solid #ccc;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 0.3rem;
}

.row input:focus {
  border: 1px solid #09c;
  color: #0099CC;
}

.row button {
  padding: 0 2rem;
}

.row textarea {
  font-size: 0.7rem;
  color: #ccc;
  flex-grow: 3;
  border: 1px solid #ccc;
}
