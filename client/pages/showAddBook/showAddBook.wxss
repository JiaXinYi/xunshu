.addbtn {
  background-color: #1296db;
  text-align: center;
  vertical-align: middle;
  line-height: 48px;
  font-weight: bold;
  color: #fff;
  border-radius: 100%;
  width: 48px;
  height: 48px;
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%)  translateY(-50%);
}

.booklist {
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  padding: 4px 12px;
  display: flex;
}

.bookinfo {
  font-size: 30rpx;
  padding: 10px 20px;
}

.bookimg {
  width: 110px;
  height: 150px;
}

.bookname {
  color: #1296db;
  font-size: 36rpx;
}
.changebtn{
  position: absolute;
  width: 68px;
  text-align: center;
  font-size: 24rpx;
  margin-top: 36px;
  right: 10px;  
  padding: 4px 4px;
  border: 1px solid #1296db;
  border-radius: 10px;
  color: #1296db;
}
